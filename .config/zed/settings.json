// Docs: https://zed.dev/docs/configuring-zed
// Default settings: `zed: open default settings` command
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 18,
  "buffer_font_weight": 500,
  "ui_font_size": 18,
  "ui_font_family": "Inter",
  "ui_font_weight": 500,
  "ensure_final_newline_on_save": true,
  "soft_wrap": "editor_width",
  "format_on_save": "off",
  "current_line_highlight": "none",
  "buffer_font_features": {
    "liga": true,
    "calt": true,
    "dlig": true
  },
  "theme": {
    "mode": "system",
    "dark": "VSCode Dark Modern",
    "light": "Github Light"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank", // No way to copy to system clipboard if this is set to never
    "toggle_relative_line_numbers": true
  },
  "base_keymap": "VSCode",
  "terminal": {
    "shell": {
      "program": "zsh"
    }
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  // "show_inline_completions": true,
  // "features": {
    // "inline_completion_provider": "none"
  // },
  "languages": {
    "Typst": {
      "show_edit_predictions": false
    },
    "JSON": {
      "tab_size": 2,
      "hard_tabs": false
    },
    "C": {
      "tab_size": 8,
      "hard_tabs": true
    },
    "C++": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "Python": {
      "tab_size": 4,
      "hard_tabs": false
    },
    "JavaScript": {
      "tab_size": 4,
      "hard_tabs": true
    }
  },
  "file_types": {
      "CMake": [
        "CMakeLists.txt"
      ]
  },
  "lsp": {
    "mojo": {
      "settings": {
        "lsp_path": "/home/aditya/.local/share/modular/bin/mojo-lsp-server",
        "args": ["--log=verbose"]
      }
    },
    "tinymist": {
      "initialization_options": {
        "exportPdf": "onSave",
        "outputPath": "$root/$name",
        "rootPath": "/home/aditya/Notes/"
      }
    }
  },
  "assistant": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro-exp-03-25"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
}
